<Page
    x:Class="CoastalNav.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoastalNav"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF113426" Offset="0.169"/>
                <GradientStop Color="#FF2ED491" Offset="0.819"/>
            </LinearGradientBrush>
        </Grid.Background>
        <TextBlock x:Name="mainHeading" HorizontalAlignment="Left" Margin="501,10,0,0" TextWrapping="Wrap" Text="Eire Coast" VerticalAlignment="Top" Foreground="#FF458900" FontSize="100" FontFamily="Curlz MT" FontWeight="Bold"/>
        <Button x:ConnectionId='1' x:Name="btnNav" Content="Navigation" HorizontalAlignment="Left" Margin="75,277,0,0" VerticalAlignment="Top" Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                      Background="#FFB2E6F1"/>
        <HyperlinkButton x:Name="hyperlinkTides" NavigateUri="http://www.irishtimes.com/weather/tides" Content="Tides" HorizontalAlignment="Left" Margin="564,277,0,0" VerticalAlignment="Top" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6" Width="283" Height="90" Background="#FFB2E6F1"/>
        <Button x:ConnectionId='2' x:Name="btnGPS" Content="GPS" HorizontalAlignment="Left" Margin="1031,276,0,0" VerticalAlignment="Top" Width="284" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                      Background="#FFB2E6F1"/>
        <Button x:ConnectionId='3' x:Name="btnLandMarks" Content="Landmarks" HorizontalAlignment="Left" Margin="75,574,0,0" VerticalAlignment="Top" Width="284" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                            Background="#FFB2E6F1"/>
        <Button x:ConnectionId='4' x:Name="btnAbout" Content="About" HorizontalAlignment="Left" Margin="1031,574,0,0" VerticalAlignment="Top" Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                             Background="#FFB2E6F1"/>
        <Image x:Name="imgNav" HorizontalAlignment="Left" Height="151" Margin="175,124,0,0" VerticalAlignment="Top" Width="181" Source="Assets/nav.png"/>
        <Image x:Name="imgTides" HorizontalAlignment="Left" Height="97" Margin="618,179,0,0" VerticalAlignment="Top" Width="191" RenderTransformOrigin="-0.031,0.61" Source="Assets/tides.png"/>
        <Image x:Name="imgGPS" HorizontalAlignment="Left" Height="99" Margin="1156,176,0,0" VerticalAlignment="Top" Width="127" Source="Assets/GPS.png"/>
        <Image x:Name="imgLandmarks" HorizontalAlignment="Left" Height="96" Margin="151,453,0,0" VerticalAlignment="Top" Width="150" Source="Assets/Landmarks.jpg" RenderTransformOrigin="0.517,0.53"/>
        <Image x:Name="imgAbout" HorizontalAlignment="Left" Height="96" Margin="1136,453,0,0" VerticalAlignment="Top" Width="99" Source="Assets/About.png"/>
        <Button x:ConnectionId='5' x:Name="btnCoastGaurd" Content="Coast Gaurd" HorizontalAlignment="Left" Margin="564,574,0,0" VerticalAlignment="Top" Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                             Background="#FFB2E6F1"/>
        <Image x:Name="imgCoastGaurd" HorizontalAlignment="Left" Height="115" Margin="659,453,0,0" VerticalAlignment="Top" Width="109" Source="Assets/coastGaurd.jpg"/>

    </Grid>
</Page>

