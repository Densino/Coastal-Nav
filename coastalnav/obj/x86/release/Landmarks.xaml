<Page
    x:Class="CoastalNav.Landmarks"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoastalNav"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF113426" Offset="0.169"/>
                <GradientStop Color="#FF2ED491" Offset="0.819"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="" HorizontalAlignment="Left" Margin="75,54,0,0" VerticalAlignment="Top" Height="65" Width="61"                       BorderThickness="0">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/back.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="landmarksHeading" HorizontalAlignment="Left" Margin="501,10,0,0" TextWrapping="Wrap" Text="Landmarks" VerticalAlignment="Top" Foreground="#FF458900" FontSize="100" FontFamily="Curlz MT" FontWeight="Bold"/>
        <Image x:Name="imgLandmarks" HorizontalAlignment="Left" Height="496" Margin="758,189,0,0" VerticalAlignment="Top" Width="598" Source="Assets/ireland.jpg"/>
        <Button x:ConnectionId='2' x:Name="btnConnaught" Content="" HorizontalAlignment="Left" Margin="833,325,0,0" VerticalAlignment="Top" Height="134" Width="131" BorderBrush="Black" ClickMode="Press"  BorderThickness="0" RenderTransformOrigin="0.542,0.5"                           />
        <Button x:ConnectionId='3' x:Name="btnLeinster" Content="" HorizontalAlignment="Left" Margin="992,411,0,0" VerticalAlignment="Top" Height="128" Width="116" BorderBrush="Black" ClickMode="Press" BorderThickness="0"                          />
        <Button x:ConnectionId='4' x:Name="btnUlster" Content="" HorizontalAlignment="Left" Margin="992,228,0,0" VerticalAlignment="Top" Height="112" Width="131" BorderBrush="Black" ClickMode="Press" BorderThickness="0"                        />
        <Button x:ConnectionId='5' x:Name="btnMunster" Content="" HorizontalAlignment="Left" Margin="809,508,0,0" VerticalAlignment="Top" Height="134" Width="155" BorderBrush="Black" ClickMode="Press" BorderThickness="0"                         />
        <Border BorderBrush="#FF3C7614" BorderThickness="8" HorizontalAlignment="Left" Height="566" Margin="200,148,0,0" VerticalAlignment="Top" Width="474">
            <Image x:Name="imgMap" Source="Assets/map.jpg" Opacity="0.65"/>
        </Border>
        <TextBlock x:Name="txtBlock" HorizontalAlignment="Left" Margin="234,171,0,0" TextWrapping="Wrap" Text="Check out some of the many landmarks you can visit while travelling around the coast of Ireland. Some are inland while some are right on the coast, with some of the beautiful islands to check out too. Sorted by province so its easy for you to find whats close to you." VerticalAlignment="Top" Height="514" Width="420" Foreground="#FF0C1712" FontSize="28" FontFamily="Segoe Print" FontWeight="Bold"/>

    </Grid>
</Page>

