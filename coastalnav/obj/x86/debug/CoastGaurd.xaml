<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoastalNav"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Maps="using:Bing.Maps"
    x:Class="CoastalNav.CoastGaurd"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF113426" Offset="0.169"/>
                <GradientStop Color="#FF2ED491" Offset="0.819"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Button x:ConnectionId='1' x:Name="btnBack" Content="" HorizontalAlignment="Left" Margin="75,54,0,0" VerticalAlignment="Top" Height="65" Width="61"                       BorderThickness="0">
            <Button.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/back.png"/>
            </Button.Background>
        </Button>
        <TextBlock x:Name="coastgaurdHeading" HorizontalAlignment="Left" Margin="456,57,0,0" TextWrapping="Wrap" Text="Coast Gaurd" VerticalAlignment="Top" Foreground="#FF458900" FontSize="75" FontFamily="Curlz MT" FontWeight="Bold"/>
        <HyperlinkButton x:Name="hyperLinkFbook"  NavigateUri="https://www.facebook.com/IrishCoastGuard" HorizontalAlignment="Left" Margin="1229,154,0,0" VerticalAlignment="Top" Height="95" Width="94" ClickMode="Press">
            <HyperlinkButton.Background>
                <ImageBrush Stretch="Fill" ImageSource="Assets/facebook.png"/>
            </HyperlinkButton.Background>
        </HyperlinkButton>
        <TextBlock HorizontalAlignment="Left" Height="119" Margin="116,157,0,0" TextWrapping="Wrap" Text="In need of Coast Gaurd Assistance? Here is a list of some of the bigger stations around the country. With their location and their co-ordinates" VerticalAlignment="Top" Width="1145" FontFamily="Segoe Print" FontSize="30"/>
        <ListView x:Name="listView1" HorizontalAlignment="Left" Height="436" Margin="116,276,0,0" VerticalAlignment="Top" Width="1089">
            <Image x:Name="img1" Height="425" Width="1075" Source="Assets/belfast.png" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>
            <Image x:Name="img2" Height="425" Width="1075" Source="Assets/cork.png" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>
            <Image x:Name="img3" Height="425" Width="1075" Source="Assets/doolin.png" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>
            <Image x:Name="img4" Height="425" Width="1075" Source="Assets/dublin.png" IsDoubleTapEnabled="False" IsHoldingEnabled="False" IsRightTapEnabled="False" IsTapEnabled="False"/>

        </ListView>
    </Grid>
</Page>

