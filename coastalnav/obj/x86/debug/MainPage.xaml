<Page
    x:Class="CoastalNav.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CoastalNav"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush Stretch="Fill" ImageSource="Assets/bkground.jpg"/>
        </Grid.Background>
        <MediaElement AutoPlay="True" x:Name="media" Source="Assets/CoastalSounds.wav" Grid.Column="0" Grid.Row="0" IsLooping="True" Margin="683,446,682,321" />
        <TextBlock x:Name="mainHeading" HorizontalAlignment="Left" Margin="501,10,0,0" TextWrapping="Wrap" Text="Eire Coast" VerticalAlignment="Top" Foreground="#FF458900" FontSize="100" FontFamily="Curlz MT" FontWeight="Bold"/>
        <TextBlock x:Name="txtBlockMainPg" HorizontalAlignment="Left" Margin="567,134,0,0" TextWrapping="Wrap" Text="Hike, Drive, Sea Kayak" VerticalAlignment="Top" Foreground="#FF458900" FontSize="30" FontFamily="Curlz MT" />
        <Button x:ConnectionId='1' x:Name="btnNav" Content="Maps" HorizontalAlignment="Left" Margin="75,289,0,0" VerticalAlignment="Top" Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                      Background="#FFB2E6F1"/>
        <HyperlinkButton x:Name="hyperlinkTides" NavigateUri="http://www.irishtimes.com/weather/tides" Content="Tides" HorizontalAlignment="Left" Margin="564,289,0,0" VerticalAlignment="Top" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6" Width="283" Height="90" Background="#FFB2E6F1"/>
        <Button x:ConnectionId='2' x:Name="btnLandMarks" Content="Landmarks" HorizontalAlignment="Left" Margin="74,572,0,0" VerticalAlignment="Top" Width="284" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                            Background="#FFB2E6F1"/>
        <Image x:Name="imgNav" HorizontalAlignment="Left" Height="151" Margin="175,136,0,0" VerticalAlignment="Top" Width="181" Source="Assets/nav.png"/>
        <Image x:Name="imgTides" HorizontalAlignment="Left" Height="97" Margin="618,191,0,0" VerticalAlignment="Top" Width="191" RenderTransformOrigin="-0.031,0.61" Source="Assets/tides.png"/>
        <Image x:Name="imgLandmarks" HorizontalAlignment="Left" Height="96" Margin="150,451,0,0" VerticalAlignment="Top" Width="150" Source="Assets/Landmarks.jpg" RenderTransformOrigin="0.517,0.53"/>
        <Image x:Name="imgAbout" HorizontalAlignment="Left" Height="96" Margin="1135,451,0,0" VerticalAlignment="Top" Width="99" Source="Assets/About.png"/>
        <Button x:ConnectionId='3' x:Name="btnCoastGaurd" Content="Coast Gaurd" HorizontalAlignment="Left" Margin="1030,293,0,0" VerticalAlignment="Top" Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6"                             Background="#FFB2E6F1"/>
        <Image x:Name="imgCoastGaurd" HorizontalAlignment="Left" Height="115" Margin="1125,172,0,0" VerticalAlignment="Top" Width="109" Source="Assets/coastGaurd.jpg"/>
        <Button x:ConnectionId='4' x:Name="btnAbout" Content="About" HorizontalAlignment="Left" Margin="1031,572,0,0" VerticalAlignment="Top"                         Width="283" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6" Background="#FFB2E6F1"/>
        <Button x:ConnectionId='5' x:Name="btnWild" Content="Wild Atlantic Way" HorizontalAlignment="Left" Margin="442,572,0,0" VerticalAlignment="Top" Width="501" RenderTransformOrigin="0.5,0.5" Height="90" BorderBrush="#FF458900" Foreground="#FF458900" FontFamily="Curlz MT" FontSize="40" BorderThickness="6" Background="#FFB2E6F1"                      />
        <Image HorizontalAlignment="Left" Height="96" Margin="618,452,0,0" VerticalAlignment="Top" Width="160" Source="Assets/wildAtlanticWay.jpg"/>
    </Grid>
</Page>

